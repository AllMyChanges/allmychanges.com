@require "utils"

.page {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 16px;
    line-height: 22px;
    background-color: #FFF;
}

body.email {
    background-color: #FFF;
}

.digest-source {
    list-style-type: none;
    padding-left: 0px;

    &__namespace-field {
        width: 15em;
    }
    &__source-field {
        width: 25em;
    }
    &__problem {
        color: red;
    }
    &__waiting {
        color: blue;
    }
    &__version {
        color: green;
    }
}

content-margins() {
    @media (max-width: 600px) {
        margin-left: 10px;
        margin-right: 10px;
    }
    @media (min-width: 600px) {
        margin-left: 100px;
        margin-right: 100px;
    }
}

.content {
    content-margins()
}

.footer {
    content-margins()

    margin-top: 2em;
    margin-bottom: 1em;
    border-top: 1px solid #ddd;
    padding-top: 1em;
    color: gray;
}

.clear {
    clear: both;
}


.grouped-changes-title {
    font-size: 1.5em;
    font-family: header-font;
    font-weight: 300;
    margin-top: 1em;
}


.package-changes {
    list-style: none;
    clear: both;

    &__package-title {
        font-size: 1.2em;
        font-family: header-font;
        > a {
            black-link()
        }
    }
}

.package-version {
    list-style: none;

    &__number {
        display: inline-block;
        margin-top: 1em;
        font-family: header-font
        > a {
          black-link()
        }
    }
    &__date {
        display: inline;
        color: gray;
        font-family: header-font
    }

    &__description {
        margin-left: 1em;
        margin-top: 0.5em;
        font-size: 16px;
        line-height: 22px;
        font-family: generic-font;
        font-weight: 300;

        & ul, & ol {
            // we need outside and left-margin here because this way
            // multiline items looks better
            list-style-position: outside;
            margin-left: 16px;

            margin-top: 10px;
            margin-bottom: 10px;
        }

        & li > ul,
        & li > ol {
            margin-left: 20px;
            margin-top: 0px;
        }

        h1 {
           font-size: 26px;
           font-family: header-font;
           line-height: 40px;
           margin-top: 16px;
           margin-bottom: 6px;
        }

        h2 {
           font-size: 22px;
           font-family: header-font;
           line-height: 22px;
           margin-top: 16px;
           margin-bottom: 6px;
        }
        h3 {
           font-size: 16px;
           font-family: header-font;
           line-height: 22px;
           font-variant: small-caps;
           margin-top: 16px;
           margin-bottom: 6px;
        }
        h4 {
           font-size: 16px;
           font-family: header-font;
           line-height: 22px;
           font-variant: small-caps;
           margin-top: 16px;
           margin-bottom: 6px;
           color: gray;
        }
        h1 tt, h2 tt, h3 tt, h4 tt {
           font-weight: normal;
        }
        p {
           font-size: 16px;
           line-height: 22px;
           margin-bottom: 11px;
        }
        p:last-child {
           margin-bottom: 0px;
        }
        /* show code blocks nicely */
        pre {
           font-size: 12px;
           background-color: #FAFAFA;
           border: 1px solid #DFDFDF;
           padding: 11px;
        }
        /* hide Django's permalinks */
        a[title="Permalink to this headline"] {
           display: none;
        }

    }
}

.package-changes__package-title {
    margin-top: 1em;
    display: inline-block;
}


.package-metadata {
  > dt {
    float: left;
    clear:left;
    color: gray + #333;
  }
  > dd {
    float: left;
    margin-left: 0.6em;
    
    color: gray;
  }
}

// TODO remove after migration to a single blob versions
.changelog-item-type {
      background-color: purple;
      content: text;
      font-size: 12px;
      font-family: Courier New;
      padding: 2px 4px;
      border-radius: 3px;
      color: white;
      margin-right: 8px;
      position: relative;
      top: -2px;
}

.changelog-item-type_fix {
      background-color: #ee883d;
}

.changelog-item-type_new {
      background-color: #5fbe40;
}

.changelog-item-type_security {
      background-color: #ff3b16;
}

.changelog-item-type_dep {
      background-color: #ff3b16;
}

.changelog-item-type_inc {
      background-color: #ff3b16;
}

// leave only this after migration to a single blob versions
.changelog-highlight {
    &-fix {
        border-bottom: 4px solid #ee883d;
    }
    &-inc {
        border-bottom: 4px solid #ff3b16;
    }
    &-dep {
        border-bottom: 4px solid #ff3b16;
    }
    &-sec {
        border-bottom: 4px solid #ff3b16;
    }
}


/* autocomplete */
.autocomplete-input {
    display: inline-block;
}


/* profile settings */
.form_profile {
    width: 50%;
}


/* token page */
.text-input_with-token {
    width: 30em;
}



.autocomplete-input {
    width: 100%;
}



/* dropdown */
.dropdown {
    display: inline-block;
}

.report-button {
    display: inline-block;
}

.popup {
  position: absolute;
  margin-top: 10px;
  z-index:30000;
  width: 400px;
  background-color: white;
  padding: 10px;
  display: block;
  border: 1px solid #CBCBCB;
  box-shadow: 0px 10px 20px -4px rgba(0, 0, 0, 0.4);
}
/* end dropdown */

/* page of catalogue */

.catalogue-namespaces {
  width: 100%;
  transition: width 500ms;
  background: #EEE;
  &_transition {
    width: 200px;
  }
  &_selected {
    display: table-cell;
    width: 200px;
  }
}

.catalogue-namespace {
  display: inline-block
  font-size: 20px
  line-height: 20px
  width: 200px

  transition: all ease 500ms;
  & a {
    display: block;
    padding: 10px;
    transition: all ease 500ms;
  }

  &:hover {
    background: #4444FF
    & a {
      color: white
    }
  }

  &_selected {
    background: #4444FF
    & a {
      color: white
      text-decoration: none

      &:before {
          content: "+"
          float: right
          transform: rotate(45deg)
      }
    }
  }
}

.catalogue-packages {
    display: none
    list-style: outside none none;
    padding-left: 20px;
    border: 2px solid #eee;


    & li {
        display: inline-block;
        white-space: nowrap;
        min-width: 200px;
        line-height: 40px;
    }
    
    &_visible {
        display: table-cell
    }

}

/* end page of catalogue */


.version-links {
    list-style: none;
    margin-bottom: 20px;
    clear: both;
    &__wrapper {
        height: auto !important;
    }
    &__sticky .version-links {
        background: rgba(255, 255, 255, 0.8);
        box-shadow: 0 0 5px;
        @media (min-width: 600px) {
            margin-right: 95px;
            left: 95px;
        }
        @media (max-width: 600px) {
            left: 0px;
        }
        padding: 0 5px 5px 5px;
    }
    &__item {
        display: inline-block;
        margin-right: 10px;
        min-width: 40px;
    }
    &__selected-item a {
        color: black;
        text-decoration: none;
        font-weight: bold;
        cursor: default;
    }
}


.track-button-container {
    display: inline-block;
}

.track-button {
    position: relative;
}

.track-button__message {
    width: 400px;
    position: absolute;
    top: -16px;
    left: 70px;
    font-size: 16px;
    color: gray;
    font: generic-font;
}
