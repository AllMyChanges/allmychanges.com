landing-text-color = #666

.landing-ru {
    font-family: "Lucida Console", Monaco, monospace;
    font-size: (30em / 15);
    line-height: (45em / 30);
    padding-top: 1em;

    > p {
        margin-bottom: 1em;
        color: landing-text-color;
    }
    .highlight {
        color: (landing-text-color - #333);
    }
}
