.logo {
    white-space: nowrap;

    &__text {
        @media (max-width: 640px) {
            font-size: 24px;
            line-height: 24px;
            margin-top: 24px;
        }
        @media (min-width: 640px) {
            font-size: 32px;
            line-height: 32px;
        }
        font-family: header-font
        color: yellow-color;
    }
    &__link {
        text-decoration: none;
        color: yellow-color;
        transition: all ease 500ms;  
    }
    &__image {
      position: relative;
      top: -16px;
      left: -6px;
      @media (max-width: 640px) {
          width: 24px;
          height: 24px;
      }
    }
    &__link:hover {
        color: light-red-color;
    }
}

