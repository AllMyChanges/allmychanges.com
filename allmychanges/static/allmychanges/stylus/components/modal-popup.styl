.modal-popup {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.75);
    z-index: 30000;

    &__content {
        display: block;

        max-width: 50%;
        min-height: 200px;

        margin-top: 100px;
        margin-left: auto;
        margin-right: auto;
        padding: 10px;

        background-color: white;
        border: 1px solid #CBCBCB;
        box-shadow: 0px 10px 20px -4px rgba(0, 0, 0, 0.4);

        @media (max-width: 600px) {
            max-width: 100%;
            margin-left: 20px;
            margin-right: 20px;
        }
        @media (max-height: 500px) {
            margin-top: 20px;
        }
    }

    &__please-login {
        padding: 30px;
        > p {
            font-size: 30px;
            line-height: 40px;
            margin-bottom: 30px;
            @media (max-width: 600px) {
                font-size: 20px;
                line-height: 30px;
            }
        }
    }
}
