.package-selector {
    margin-top: 20px;

    &__title {
        white-space: nowrap;
    }
    &__description {
        color: gray-text-color
        font-weight: normal
    }
    &__tracked-msg {
        p {
            margin-top: 20px
        }
        ul {
            list-style: none
            margin-top: 20px
            li {
                display: inline-block
                font-weight: bold
            }
            li:after {
                content: ","
                margin-right: 10px;
            }
            li:last-child:after {
                content: ""
            }
        }
    }
    &__item {
        display: inline-block;
        overflow: hidden;
        list-style: none;
        margin-right: 44px;
        margin-bottom: 20px;
        vertical-align: top;
    }
    &__version {
        list-style: none;
        white-space: nowrap;
        margin-top: 15px
    }
    &__number {
        font-weight: bold;
        display: box;
    }
    &__date {
        color: gray;
    }
    &__versions {
        width: 100%;
        background-image: url("/static/allmychanges/img/ajax-loader.gif");   
        background-repeat: no-repeat;
        background-position: 50% 50%;
    }
    &__versions-grad {
        position: absolute;
        width: 100%;
        height: 30px;
        box-sizing: border-box;
        bottom: 0px;
        background-image: linear-gradient(rgba(255, 255, 255, 0), rgb(255, 255, 255));
    }
    &__versions-wrapper {
        position: relative
        margin-bottom: 22px
        max-height: 200px
        width: 100%
        overflow: hidden   
    }
    &__buttons {
        margin-top: 20px
        & .track-button {
            margin-right: 150px;
            @media (max-width: 800px) {
                margin-right: 30px;
            }
        }
        & .button {
            font-size: 30px;
            line-height: 30px;
        }
    }
}

