@require "utils"

.header {
    @media (max-width: 600px) {
           padding-left: 10px;
    }
    @media (min-width: 600px) {
           padding-left: 100px;
    }
    padding-top: 1.5em;
    background-color: #EEE;
    margin-bottom: 30px;
}

.logo {
    position: absolute
    top: 32px
    z-index: 1000

    &__text {
        font-size: 2em
        font-family: header-font
    }
    &__link {
        text-decoration: none;
        color: black;
        transition: all ease 500ms;  
    }
    &__link:hover {
        color: #4466FF;
    }
}

.login-plate {
    position: absolute
    right: 20px
    top: 5px

    &__greeting {
        display:inline-block;
        width: 160px;
        white-space: nowrap;
        overflow: hidden;
        position: relative;
        top: 6px;
        text-align: right;
    }

    &__profile-link {
        black-link();
    }
}

/* Navigation */
.site-menu {
  display: block;
  margin: 0;
  padding: 20px 0px 10px 0px;
  border-bottom: 1px solid gray;
}
.site-menu__item {
  display: inline-block;
}
.site-menu__item a {
  display: block;
  font-size: 20px;
  margin-right: 30px;
  color: text-color;
  text-decoration: none;
  border-bottom: 5px solid #555;
  transition: 0.2s;
  &:hover {
      color: link-color;
      border-bottom: 5px solid link-color;
  }
}
.site-menu__selected-item a {
  border-bottom: 5px solid red;
  &:hover {
      color: text-color;
      border-bottom: 5px solid red;
      cursor: default;
  }
}
/* END Navigation */


.magic-prompt {
    width: 100%;
    box-sizing: border-box;
    @media (min-width: 600px) {
        padding-right: 100px;
    }
    @media (max-width: 600px) {
        padding-right: 20px;
    }
    margin-top: 50px;
    position: relative;

    &__input {
        font-size: 24px;
        line-height: 40px;
        border: 1px solid gray;
        padding: 0 5px;
        width: 100%;
        -webkit-appearance: none;
    }
    &__submit {
        visibility: hidden;
        font-size: 24px;
        line-height: 32px;
        position: absolute;
        right: 250px;
    }
    &__no-matches {
        padding: 10px;
    }
    &__suggest-item-info {
        color: gray;
        float: right;
    }
    &__suggest-item-source {
        display: inline-block;
        white-space: nowrap;
        max-width: 600px;
        overflow: hidden;
        color: gray;
    }
    .twitter-typeahead {
        width: 100%;
    }

    .tt-dropdown-menu {
        width: 100%;
        background: white;
        border: 1px solid gray;
        box-shadow: 0 0 3px #111;
        margin-top: 10px;
    }

    .tt-suggestion {
        border-bottom: 1px solid gray;
        font-size: 15px;
        line-height: 20px;
        padding: 10px;
    }
 
    .tt-cursor {
        background: #88F;
    }

    .tt-suggestion:last-of-type {
        border-bottom: none;
    }
}
