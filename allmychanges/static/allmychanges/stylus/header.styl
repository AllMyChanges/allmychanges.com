@require "utils"

.header {
    padding-bottom: 1.5em;
    padding-top: 1.5em;
    background-color: white;
    margin-bottom: 1em;
    border-bottom: 1px solid #dedede;
}

.logo {
    float: left;
    margin-left: 100px

    &__text {
        font-size: 2em
        font-family: header-font
    }
    &__link {
        text-decoration: none;
        color: black;
        transition: all ease 500ms;  
    }
    &__link:hover {
        color: #4466FF;
    }
}

.login-plate {
    float: right;
    margin-right: 100px;
    line-height: 2em;

    &__profile-link {
        black-link();
    }
}
