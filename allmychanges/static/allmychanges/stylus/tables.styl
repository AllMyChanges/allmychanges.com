.table > thead {
  color: gray;
}

.table > tbody > tr:nth-child(even) {
  background: #F8F8F8;
}
.table > tbody > tr:nth-child(odd) {
  background: #E1E1D7;
}
.table > tbody > tr:hover {
  background: #FFB3B3;
}

.table > tbody > tr > td {
  padding-right: 10px;
  vertical-align: middle;
}

.table > tbody > tr > td:first-child {
  padding-left: 5px;
}

.table > tbody > tr > td:last-child {
    padding-right: 5px;
}