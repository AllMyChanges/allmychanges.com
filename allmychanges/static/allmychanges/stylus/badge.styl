.share-badge {
    display: inline-block;
    position: relative;
    top: -1em;
    margin-bottom: -1.5em;

    > tbody > tr > td {
        vertical-align: top;
    }
    
    &__example {
        margin-right: 10px;
        margin-top: 4px;
    }

    &__text {
      width: 400px;
    }
    &__tabs {
        font-size: 8px;
        line-height: 1em;
        position: relative;
        top: 1px;
        left: 6px;
        width: 400px;
    }

    .tab {
        display: inline-block;
        border: 1px solid gray;
        border-bottom-width: 0;
        padding: 2px;
        cursor: pointer;

        color: (text-color + 50%);
        background-color: white;

        &:last-child {
            border-right: 1px solid gray;
        }
        &_active {
            z-index: 100;
            border-bottom: 1px solid white;
            color: text-color;
        }
    }
}