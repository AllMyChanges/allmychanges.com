.help {
    h1 {
        font-family: header-font;
        font-size: 30px;
        line-height: 40px;
        margin-bottom: 30px;
    }
    h2 {
        font-family: header-font;
        font-size: 20px;
        line-height: 30px;
        margin-bottom: 20px;
        margin-top: 40px;
    }
    p, li {
        font-size: 16px;
        line-height: 30px;
    }
    p {
        margin-top: 20px;
    }
    li {
        list-style-position: inside;
    }
    ul, ol {
        margin-top: 20px;
    }

    .anchor {
        color: text-color;
        text-decoration: none;
        cursor: text;

        &:hover {
            &:after {
                content: "permalink"
                display: inline;
                cursor: pointer;
                font-size: 10px;
                line-height: 10px;
                position: relative;
                top: -15px;
            }
        }
    }
}