


.add-page__container {
    max-width: 800px;
}

.add-page__text {
    font-size: 20px;
    line-height: 30px;
}

.add-page__examples {
    list-style-position: inside;
    font-size: 20px;
    line-height: 30px;
    margin: 20px
}
.add-page__example a {
    color: black;
    text-decoration: none;
    transition: color 0.2s;
    font-family: courier new;
}
.add-page__example a:hover {
    color: blue;
    text-decoration: none;
}

.add-page__form {
    position: relative;
    padding-right: 110px;
    margin: 30px 0;
}

.add-page__input {
    width: 100%;
    margin-right: -40px;
    font-size: 25px;
    height: 35px;
    border: 4px solid light-red-color;
}

.add-page__submit-button {
    position: absolute;
    right: 0px;
    top: 0px;
    width: 80px;
}


/* start of the new package page */

.new-package {
    &__greeting {
        font-size: 24px;
        line-height: 32px;
    }
    &__url {
        font-weight: bold;
    }

    &__fields-table {
        margin-top: 24px;
        margin-bottom: 24px;
        width: 100%;
        max-width: 800px
    }
    &__search-input,
    &__ignore-input,
    &__xslt-input {
        width: 100%;
        box-sizing: border-box;
    }
    &__search-label,
    &__ignore-label,
    &__xslt-label {
        padding-top: 12px;
    }

    &__search-input,
    &__ignore-input,
    &__xslt-input {
        height: 140px;
    }
    &__button-cell {
        vertical-align: bottom;
        text-align: right;
        input {
          margin-right: 20px
        }
        input:last-of-type {
          margin-right: 0
        }
    }

    &__save-tooltip {
        position: absolute;
        width: 200px;
        color: #FE7649;
    }
    &__rename-warning {
        color: #FE7649;
    }
}

.namespace-name-cell {
    &__table {
        width: 100%;
    }
    &__namespace-cell,
    &__name-cell {
        width: 50%;
    }
}

.preview-error {
    color: red;
}

.namespace-name-cell__namespace-cell {
    vertical-align: bottom;
}


.tune-options {
    margin-left: 20px;
    margin-top: 20px;

    > li {
        margin-bottom: 10px;
        > a {
            margin-bottom: 10px;
            display: inline-block;
        }
    }
}
/* end of new-package page */