.add-page__container {
    max-width: 800px;
}

.add-page__text {
    font-size: 20px;
    line-height: 30px;
}

.add-page__examples {
    list-style-position: inside;
    font-size: 20px;
    line-height: 30px;
    margin: 20px
}
.add-page__example a {
    color: black;
    text-decoration: none;
    transition: color 0.2s;
    font-family: courier new;
}
.add-page__example a:hover {
    color: blue;
    text-decoration: none;
}

.add-page__form {
    position: relative;
    padding-right: 110px;
    margin: 30px 0;
}

.add-page__input {
    width: 100%;
    margin-right: -40px;
    font-size: 25px;
    height: 35px;
}

.add-page__submit-button {
    position: absolute;
    right: 0px;
    top: 0px;
    width: 80px;
}
